<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="css/materialize.min.css">
    <title>Task list</title>
</head>
<body>
<div class="container">
    <div class="row">
        <div class="col s12 m12">
            <div class="card">
                <div class="card-content"><span class="card-title">Add task</span>
                    <form method="post" action="/add-task" onsubmit="" class="s12 row" id="addTask">
                        <div class="row">
                            <div class="col s12">
                                <div class="input-field col s12">
                                    <input name="user_task" class="validate" id="task" type="text">
                                    <label for="task" >Add new task</label>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <div class="col">
                                    <input class="btn white-text" type="submit" value="Add task"/>
                                </div>
                            </div>
                        </div>
                    </form>
                    <div class="s12 row">
                        <span class="card-title" id="taskTitle">Tasks</span>
                        <ul class="collection" id="taskList">
                            <% tasksData.forEach((taskEl) => { %>
                                <li class="collection-item">
                                    <%= taskEl.task %>
                                    <a href="delete-task/<%= taskEl.id %>" class="secondary-content">X</a>
                                </li>
                            <% })%>
                        </ul>
                        <a href="/delete-all" id="deleteAll" class="btn">Delete all tasks</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="js/materialize.min.js"></script>
</body>
</html>